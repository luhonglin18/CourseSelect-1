 		    <th><%= i %></th>
 		    <td>
 		        <div>
 		            <% @courses.each do |course|%>
 		            <% @num = course.course_time.scan(/\d./)%>
 		            <%= course.name if course.course_time.include?"周一" and (@num[0].to_i<=i.to_i and i.to_i<=@num[1].to_i)%>
 		            <%end%>
 		        </div>
 		    </td>
 		    <td>
 		        <div>
 		            <% @courses.each do |course|%>
